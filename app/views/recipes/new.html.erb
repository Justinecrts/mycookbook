<div class="wrapper">
<div class="container">
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1">
      <h2 class="text-center">Ajouter une recette</h2>
<%= simple_form_for @recipe do |f| %>
  <%= f.error_notification %>
  <%= f.input :name, placeholder: "Ex. Tajine de poulet"%>
  <%= f.input :preparation, as: :text, placeholder: "Faites chauffer le four"%>
  <%= f.submit "Ajouter ma recette", class: "btn btn-default" %>
<% end %>
  </div>
    </div>
</div>
</div>

